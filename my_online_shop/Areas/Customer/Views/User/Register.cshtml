@model ApplicationUser

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

    <h3 class="text-center">
        Register
    </h3>
<hr />

<div>
    <a class="btn btn-outline-info" asp-area="Customer"
       asp-controller="User" asp-action="List">
        <i class="fas fa-arrow-left"> </i>
        &nbsp; Back to List
    </a>
</div>

<br />
<form asp-action="Register" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header text-danger" asp-validation-summary="All">

        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-12 col-md-7">

                    <div class="row">

                        <div class="row col-12">
                            <label asp-for="FirstName" class="form-check font-weight-bold col-4"></label>

                            <input asp-for="FirstName" class="form-control col-8" required
                                   placeholder="Enter First Name" />

                        </div>

                        <div class="row col-12 mt-3">
                            <label asp-for="LastName" class="form-check font-weight-bold col-4"></label>

                            <input asp-for="LastName" class="form-control col-8" required
                                   placeholder="Enter Last Name" />
                        </div>

                        <div class="row col-12 mt-3">
                            <label asp-for="Email" class="form-check font-weight-bold col-4"></label>

                            <input asp-for="Email" class="form-control col-8" type="email"  required
                                   placeholder="Enter Email" />
                        </div>

                        <div class="row col-12 mt-3">
                            <label asp-for="PhoneNumber" class="form-check font-weight-bold col-4"></label>

                            <input asp-for="PhoneNumber" class="form-control col-8" required
                                   placeholder="Enter Phone Number" type="number"/>
                        </div>
                        
                        <div class="row col-12 mt-3">
                            <label asp-for="UserName" class="form-check font-weight-bold col-4"></label>

                            <input asp-for="UserName" class="form-control col-8" required
                                   placeholder="Enter Username" />
                        </div>

                        <div class="row col-12 mt-3">
                            <label asp-for="PasswordHash" class="form-check font-weight-bold col-4"></label>

                            <input asp-for="PasswordHash" class="form-control col-8" required
                                   placeholder="Enter Password" type="password"/>

                        </div>

                    </div>
                </div>

                <div class="col-12 col-md-5">

                </div>


                <div class="offset-md-3 col-md-2 mt-2">
                    <input type="submit" class="btn btn-outline-primary"/>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        
    </script>
}

